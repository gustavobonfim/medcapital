<%= simple_form_for(@deposit, remote: request.xhr?, html: { data: { modal: true } }) do |f| %>
  <div class="modal-body">
    <div class="input-group">
      <div class="input-group-prepend">
    <span class="input-group-text"> R$ </span>  </div><%= f.input :value, label: false, error: 'É necessário adicionar um valor', as: :string %>

  </div>

  <div class="modal-footer">
    <%= f.button :submit, "Realizar Depósito" , class: 'btn-success' %>
  </div>
<% end %>