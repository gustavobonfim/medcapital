<%= simple_form_for(@withdraw, remote: request.xhr?, html: { data: { modal: true } }) do |f| %>
  <div class="modal-body">
    <%= f.input :value, label: "Valor", error: 'É necessário adicionar um valor', as: :string %>
    <%= f.input :name, label: "Nome Completo", error: 'É necessário adicionar um nome' %>
    <%= f.input :bank, label: "Banco", error: 'É necessário adicionar um banco', collection: [ "Banco do Brasil", "Itaú Unibanco", "Nubank", "Santander", "Bradesco", "Banco Inter", "Banco Original"] %>
    <%= f.input :acc, label: "Conta", error: 'É necessário adicionar uma conta', as: :string %>
    <%= f.input :agency, label: "Agência", error: 'É necessário adicionar uma agência', as: :string %>
    <%= f.input :cpf, label: "CPF", error: 'É necessário adicionar um CPF', as: :string %>
  </div>

  <div class="modal-footer">
    <%= f.button :submit, "Realizar Transferência" , class: 'btn-success'%>
  </div>
<% end %>